mixin header()
  header#headerSec
    include ../components/nav.pug
    script(src=`${ static }/js/components/header.js`)
    div#csieTitle
      a(href='/')
        img
        h1 成功大學資訊工程學系暨研究所
        h2 Department of Computer Science and Information Engineering
    input(placeHolder='search')
    a(href='/') English
    ul#navBarUl
      a(href='/')
        +nav('linkIndex', '首頁', '')
      +nav('linkAbout', '關於本系', 'dropAbout')
      +nav('linkResearch', '學術研究', 'dropResearch')
      +nav('linkStudent', '學生事務', 'dropStudent')
      +nav('linkAnnouncement', '系所公告', 'dropAnnouncement')
      +nav('linkResource', '資源連結', 'dropResource')
    div#dropAbout(class='drop')
      a(href='/about/intro') 系所介紹
      a(href='/about/teachers') 師資陣容
      a(href='/about/members') 系辦成員
      a(href='/about/honor') 榮譽事蹟
      a(href='/about/location') 聯絡我們
    div#dropResearch(class='drop')
      a(href='/research/labs') 實驗室
      a(href='/research/groups') 研究群
      a(href='/research/publications') Publications
      a(href='/research/awards') Awards
      a(href='/research/conferences') 研討會
    div#dropStudent(class='drop')
      a(href='/student/course') 課程資訊
      a(href='/student/college') 大學部
      a(href='/student/master') 碩士
      a(href='/student/phd') 博士
      a(href='/student/scholarship') 獎學金
      a(href='/student/international') 國際交流
    div#dropAnnouncement(class='drop')
      a(href='/announcement/all') 全部公告
      a(href='/announcement/administrator') 行政公告
      a(href='/announcement/activity') 活動訊息
      a(href='/announcement/speech') 演講公告
      a(href='/announcement/recruitment') 企業徵才
    div#dropResource(class='drop')
      a(href='/resource/law') 法規彙編
      a(href='/resource/rent') 線上租借
      a(href='/resource/fix') 修繕登記
      a(href='/resource/ieet') 工程認證
      a(href='/resource/resources') 線上資源
